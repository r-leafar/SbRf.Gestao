<Window x:Class="DesktopApp.ProdutoWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DesktopApp"
        mc:Ignorable="d"
        Title="Cadastro de Produto" Height="670" Width="1280"
        WindowStartupLocation="CenterScreen"
        Loaded="Window_Loaded">
    

    <Border Padding="5">
        <StackPanel>
            <!--Top Area-->
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"></ColumnDefinition>
                    <ColumnDefinition Width="1.5*"></ColumnDefinition>

                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="100"></RowDefinition>

                </Grid.RowDefinitions>

                <Grid Grid.Column="0">
                    <Grid.ColumnDefinitions>

                        <ColumnDefinition Width="*"></ColumnDefinition>
                        <ColumnDefinition Width="*"></ColumnDefinition>
                        <ColumnDefinition Width="*"></ColumnDefinition>
                    </Grid.ColumnDefinitions>

                    <DockPanel Grid.Column="0" Margin="0 0 10 0">
                        <TextBlock DockPanel.Dock="Top" Text="Código" Margin="0 0 0 5"/>
                        <TextBox   FontWeight="Bold" FontSize="34" VerticalAlignment="Center" DockPanel.Dock="Bottom"></TextBox>
                    </DockPanel>
                    <StackPanel  Grid.Column="1" HorizontalAlignment="Center">
                        <TextBlock  Text="Tipo" Margin="0 0 0 15"/>
                        <RadioButton Content="Produto" IsChecked="True" Margin="0 0 0 15"/>
                        <RadioButton Content="Servico"/>
                    </StackPanel>
                    <StackPanel Grid.Column="2" HorizontalAlignment="Center">
                        <TextBlock  Text="Status"  Margin="0 0 0 15"/>
                        <RadioButton Content="Ativo" IsChecked="True"  Margin="0 0 0 15"/>
                        <RadioButton Content="Inativo"/>
                    </StackPanel>
                </Grid>

                <Grid  Margin="5" Grid.Column="1">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"></ColumnDefinition>
                        <ColumnDefinition Width="*"></ColumnDefinition>
                        <ColumnDefinition Width="*"></ColumnDefinition>
                        <ColumnDefinition Width="*"></ColumnDefinition>
                        <ColumnDefinition Width="*"></ColumnDefinition>
                        <ColumnDefinition Width="*"></ColumnDefinition>
                        <ColumnDefinition Width="*"></ColumnDefinition>
                    </Grid.ColumnDefinitions>
                    <Button Margin="0 0 10 0" Grid.Column="0" Content="Clonar"/>
                    <Button Margin="0 0 10 0" Grid.Column="1" Content="Novo"/>
                    <Button Margin="0 0 10 0" Grid.Column="2" Content="Consultar"/>
                    <Button Margin="0 0 10 0" Grid.Column="3" Content="Excluir"/>
                    <Button Margin="0 0 10 0" Grid.Column="4" Content="Alterar"/>
                    <Button Margin="0 0 10 0" Grid.Column="5" Content="Gravar"/>
                    <Button Margin="0 0 10 0" Grid.Column="6" Content="Cancelar"/>
                </Grid>

            </Grid>
            <!--End Top Area-->
            <TabControl>
                <TabItem Header="Produto">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="1.5*"></ColumnDefinition>
                            <ColumnDefinition Width="*"></ColumnDefinition>
                            <ColumnDefinition Width="*"></ColumnDefinition>
                        </Grid.ColumnDefinitions>


                        <GroupBox GroupBox.Foreground="Salmon"  Padding="0 5 0 0">
                            <GroupBox.Header>
                                <TextBlock Text="Informações Básicas" Foreground="DarkBlue" FontWeight="Bold"/>
                            </GroupBox.Header>
                            <StackPanel>
                                <TextBlock Text="Descrição Produto" />
                                <TextBox TabIndex="0"/>
                                <!--DESCRICAO CURTA-->
                                <Grid Margin="0 0 0 5">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="4*"></ColumnDefinition>
                                        <ColumnDefinition Width="*"></ColumnDefinition>
                                    </Grid.ColumnDefinitions>
                                    <StackPanel Margin="0 5 5 0"  Grid.Column="0">
                                        <TextBlock  Text="Descrição Curta"/>
                                        <TextBox  MaxLength="40" TabIndex="1"/>
                                    </StackPanel>
                                    <StackPanel Margin="0 5 0 0" Grid.Column="1">
                                        <TextBlock  Text="Unidade"/>
                                        <ComboBox ItemsSource="{Binding Unidades}"  SelectedItem="{Binding UnidadeSelecionada}" TabIndex="2">
                                        </ComboBox>
                                    </StackPanel>
                                </Grid>
                                <!--FIM DESCRICAO CURTA-->

                                <!--CLASSIFICAÇÃO/REFERENCIA-->
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="231*"></ColumnDefinition>
                                        <ColumnDefinition Width="33*"/>
                                        <ColumnDefinition Width="265*"></ColumnDefinition>
                                    </Grid.ColumnDefinitions>
                                    <StackPanel Margin="0,0,5,0"  Grid.Column="0" Grid.ColumnSpan="2">
                                        <StackPanel >
                                            <TextBlock Foreground="DarkBlue" FontWeight="Bold" Margin="0 0 0 5" Text="Classificação"/>
                                            <TextBlock Text="Categoria"/>
                                            <ComboBox TabIndex="3">
                                                <ComboBoxItem IsSelected="True">Nenhum</ComboBoxItem>
                                                <ComboBoxItem >Bebidas</ComboBoxItem>
                                            </ComboBox>
                                            <TextBlock Margin="0 5 0 0" Text="SubCategoria"/>
                                            <ComboBox TabIndex="4">
                                                <ComboBoxItem IsSelected="True">Nenhum</ComboBoxItem>
                                                <ComboBoxItem >Não Alcolico</ComboBoxItem>
                                            </ComboBox>
                                            <TextBlock Margin="0 5 0 0" Text="Familia do Produto"/>
                                            <ComboBox TabIndex="5">
                                                <ComboBoxItem >Nenhum</ComboBoxItem>
                                                <ComboBoxItem >Bebidas Leves</ComboBoxItem>
                                            </ComboBox>
                                            <TextBlock Margin="0 5 0 0" Text="Linha do Produto"/>
                                            <ComboBox TabIndex="6">
                                                <ComboBoxItem >Nenhum</ComboBoxItem>
                                                <ComboBoxItem >Refrigerante</ComboBoxItem>
                                            </ComboBox>
                                        </StackPanel>
                                        <StackPanel Margin="0 5 0 5">
                                            <TextBlock  Foreground="DarkBlue" FontWeight="Bold" Text="Marca"/>
                                            <ComboBox TabIndex="6">
                                                <ComboBoxItem IsSelected="True">Coca Cola</ComboBoxItem>
                                            </ComboBox>
                                        </StackPanel>
                                        
                                    </StackPanel>
                                    <StackPanel Margin="5,0,0,0"  Grid.Column="2">
                                        <TextBlock   Margin="0 0 0 20" Foreground="DarkBlue" FontWeight="Bold" Text="Referência"/>
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"></ColumnDefinition>
                                                <ColumnDefinition Width="*"></ColumnDefinition>
                                                <ColumnDefinition Width="*"></ColumnDefinition>
                                                <ColumnDefinition Width="*"></ColumnDefinition>
                                            </Grid.ColumnDefinitions>
                                      
                                            <Button Grid.Column="0" TabIndex="7">
                                                <TextBlock FontFamily="Liberation Serif" Text="≤" FontSize="16"/>
                                            </Button>
                                            <Button Grid.Column="1" TabIndex="8">
                                                <TextBlock FontFamily="Liberation Serif" Text="&lt;" FontSize="16"/>
                                            </Button>
                                            <Button Grid.Column="2" TabIndex="9">
                                                <TextBlock FontFamily="Liberation Serif" Text="&gt;" FontSize="16"/>
                                            </Button>
                                            <Button Grid.Column="3" TabIndex="10">
                                                <TextBlock FontFamily="Liberation Serif" Text="≥" FontSize="16"/>
                                            </Button>

                                        </Grid>


                                        <ListView Margin="0 10 0 0" ItemsSource="{Binding MapeamentoProdutoFornecedorItemResponse}" x:Name="ReferenciaDG" TabIndex="11">
                                            <ListView.Resources>
                                                <Style TargetType="GridViewColumnHeader">
                                                    <Setter Property="HorizontalContentAlignment" Value="Center"/>
                                                    <Setter Property="VerticalContentAlignment" Value="Center"/>
                                                    <Setter Property="Template">
                                                        <Setter.Value>
                                                            <ControlTemplate TargetType="GridViewColumnHeader">
                                                                <Border Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="0,0,1,1" Padding="5,2">
                                                                    <!-- Só o conteúdo do header (texto ou botão de ordenação) -->
                                                                    <ContentPresenter  RecognizesAccessKey="True"   HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"  VerticalAlignment="{TemplateBinding VerticalContentAlignment}"/>
                                                                </Border>
                                                            </ControlTemplate>
                                                        </Setter.Value>
                                                    </Setter>
                                                </Style>
                                            </ListView.Resources>
                                            <ListView.View>
                                                <GridView AllowsColumnReorder="False">
                                                    <GridViewColumn Width="170" Header="Fornecedor" DisplayMemberBinding="{Binding FornecedorNome}"/>
                                                    <GridViewColumn Width="70" Header="Cod." DisplayMemberBinding="{Binding CodigoProdutoFornecedor}"/>
                                                </GridView>
                                            </ListView.View>
                                        </ListView>
                                    </StackPanel>
                                </Grid>
                                <!--FIM CLASSIFICAÇÃO/REFERENCIA-->
                                <!--CUSTO-->
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"></ColumnDefinition>
                                        <ColumnDefinition Width="*"></ColumnDefinition>
                                        <ColumnDefinition Width="*"></ColumnDefinition>
                                    </Grid.ColumnDefinitions>
                                    <StackPanel Grid.Column="0">
                                        <TextBlock  Margin="0 0 0 5" Foreground="DarkBlue" FontWeight="Bold" Text="Custos"/>
                                        <TextBlock  Margin="0 0 0 5"  Text="Custo Caixa"/>
                                        <TextBox Margin="0 0 5 0" TabIndex="12"></TextBox>
                                        <TextBlock  Margin="0 5 5 0" Foreground="DarkBlue" FontWeight="Bold" Text="Preço"></TextBlock>
                                        <TextBlock  Margin="0 5 5 0" Text="Margem"></TextBlock>
                                        <TextBox Margin="0 0 5 0" TabIndex="14"></TextBox>
                                    </StackPanel>
                                    <StackPanel Grid.Column="1">
                                        <TextBlock Text=""></TextBlock>
                                        <TextBlock  Margin="0 5 0 5"  Text="Quantidade por Caixa"/>
                                        <TextBox Margin="0 0 5 0" TabIndex="13"></TextBox>
                                        <TextBlock  Margin="0 5 5 0"></TextBlock>
                                        <TextBlock  Margin="0 5 5 0" Text="Margem Liquida"></TextBlock>
                                        <TextBox Margin="0 0 5 0" Background="#eee" IsEnabled="False" IsTabStop="False"></TextBox>
                                    </StackPanel>
                                    <StackPanel Grid.Column="2">
                                        <TextBlock Text=""></TextBlock>
                                        <TextBlock  Margin="0 5 0 5"  Text="Custo Unitário"/>
                                        <TextBox Background="#eee" IsEnabled="False" IsTabStop="True"></TextBox>
                                        <TextBlock Text=""></TextBlock>
                                        <TextBlock  Margin="0 5 0 5"  Text="Preço de Venda"/>
                                        <TextBox TabIndex="15"></TextBox>
                                    </StackPanel>


                                </Grid>
                                <!--FIM CUSTO-->
                            </StackPanel>
                        </GroupBox>
                        <GroupBox Grid.Column="1" Padding="0 5 0 0">
                            <GroupBox.Header>
                                <TextBlock Text="Configurações Gerais" Foreground="DarkBlue" FontWeight="Bold"/>
                            </GroupBox.Header>
                            <StackPanel>
                                <StackPanel>
                                    <CheckBox Content="Vende" Margin="0 0 0 5"/>
                                    <CheckBox Content="Produto Composto" Margin="0 0 0 5"/>
                                    <CheckBox Content="Variação" Margin="0 0 0 5"/>
                                </StackPanel>
                                <StackPanel>
                                    <TextBlock Text="Estoque" Margin="0 0 0 5" Foreground="DarkBlue" FontWeight="Bold"/>
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"></ColumnDefinition>
                                            <ColumnDefinition Width="*"></ColumnDefinition>
                                            <ColumnDefinition Width="*"></ColumnDefinition>
                                        </Grid.ColumnDefinitions>
                                        <StackPanel  Margin="0 5 5 5" Grid.Column="0">
                                            <TextBlock Text="Loja"/>
                                            <TextBox  IsEnabled="False" Background="#eee"></TextBox>
                                            <TextBlock Text="Estoque Mínimo"/>
                                            <TextBox></TextBox>
                                        </StackPanel>
                                        <StackPanel  Margin="0 5 5 5" Grid.Column="1">
                                            <TextBlock Text="Deposito" />
                                            <TextBox IsEnabled="False" Background="#eee"></TextBox>
                                            <TextBlock Text="Estoque Máximo"/>
                                            <TextBox></TextBox>
                                        </StackPanel>
                                        <StackPanel  Margin="0 5 5 5" Grid.Column="2">
                                            <TextBlock Text="Entregar" />
                                            <TextBox IsEnabled="False" Background="#eee"></TextBox>
                                            <TextBlock Text="Ponto de Pedido"/>
                                            <TextBox></TextBox>
                                        </StackPanel>
                                    </Grid>
                                </StackPanel>
                            </StackPanel>

                        </GroupBox>
                        <GroupBox Grid.Column="2">
                            <GroupBox.Header>
                                <TextBlock Text="Imagem/Outros" Foreground="DarkBlue" FontWeight="Bold"/>
                            </GroupBox.Header>
                            <StackPanel>
                                <StackPanel Margin="0 0 0 10">
                                    <Border BorderBrush="Black"  Width="200" Height="200" BorderThickness="1">
                                        <Image Width="200" Height="200"  />
                                    </Border>
                                    <StackPanel Margin="5 5 5 0">
                                        <Button  Margin="0 0 0 5" Content="Adicionar imagem"></Button>
                                        <Button Content="Remover imagem"></Button>
                                    </StackPanel>
                                </StackPanel>
                                <Grid Margin="5 0 5 5">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"></ColumnDefinition>
                                        <ColumnDefinition Width="*"></ColumnDefinition>
                                        <ColumnDefinition Width="*"></ColumnDefinition>
                                        <ColumnDefinition Width="*"></ColumnDefinition>
                                    </Grid.ColumnDefinitions>
                                    <Button Grid.Column="0" TabIndex="7">
                                        <TextBlock FontFamily="Liberation Serif" Text="≤" FontSize="16"/>
                                    </Button>
                                    <Button Grid.Column="1" TabIndex="8">
                                        <TextBlock FontFamily="Liberation Serif" Text="&lt;" FontSize="16"/>
                                    </Button>
                                    <Button Grid.Column="2" TabIndex="9">
                                        <TextBlock FontFamily="Liberation Serif" Text="&gt;" FontSize="16"/>
                                    </Button>
                                    <Button Grid.Column="3" TabIndex="10">
                                        <TextBlock FontFamily="Liberation Serif" Text="≥" FontSize="16"/>
                                    </Button>

                                </Grid>
                                <StackPanel Margin="5 0 5 0">
                                    <TextBlock Text="Localização"/>
                                    <TextBox></TextBox>
                                </StackPanel>
                            </StackPanel>
                        </GroupBox>
                    </Grid>

                </TabItem>
            </TabControl>
        </StackPanel>
    </Border>

</Window>
